{
	"name": "ls_SFDC_MSDynamics",
	"properties": {
		"parameters": {
			"SFDC_MS_DYNAMICS_USER": {
				"type": "string"
			},
			"SFDC_MS_DYNAMICS_URL": {
				"type": "string"
			},
			"SFDC_MS_DYNAMICS_API_VERSION": {
				"type": "string"
			},
			"ENVIRONMENT": {
				"type": "string"
			},
			"SHORT_LOCATION": {
				"type": "string"
			},
			"LOGICAL_ENVIRONMENT": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "Salesforce",
		"typeProperties": {
			"environmentUrl": "@{linkedService().SFDC_MS_DYNAMICS_URL}",
			"username": "@{linkedService().SFDC_MS_DYNAMICS_USER}",
			"password": {
				"type": "AzureKeyVaultSecret",
				"store": {
					"referenceName": "ls_KeyVaultCom",
					"type": "LinkedServiceReference",
					"parameters": {
						"ENVIRONMENT": {
							"value": "@linkedService().ENVIRONMENT",
							"type": "Expression"
						},
						"SHORT_LOCATION": {
							"value": "@linkedService().SHORT_LOCATION",
							"type": "Expression"
						}
					}
				},
				"secretName": {
					"value": "@if(empty(substring('@{linkedService().SFDC_MS_DYNAMICS_USER}', 34, 2)), concat('@{linkedService().LOGICAL_ENVIRONMENT}', '-SFDC-msdmigration'), concat('@{linkedService().LOGICAL_ENVIRONMENT}', '-SFDC-msdmigration-', substring('@{linkedService().SFDC_MS_DYNAMICS_USER}', 34, 7)))",
					"type": "Expression"
				}
			},
			"apiVersion": "@{linkedService().SFDC_MS_DYNAMICS_API_VERSION}"
		},
		"connectVia": {
			"referenceName": "Woking",
			"type": "IntegrationRuntimeReference"
		}
	},
	"type": "Microsoft.DataFactory/factories/linkedservices"
}