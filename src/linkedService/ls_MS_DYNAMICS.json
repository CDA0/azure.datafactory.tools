			"ENVIRONMENT": {
				"type": "string"
			},
			"LOGICAL_ENVIRONMENT": {
				"type": "string"
			},
			"SHORT_LOCATION": {
				"type": "string"
			},
			"MS_DYNAMICS_DB": {
				"type": "string"
			},
			"MS_DYNAMICS_DB_HOST": {
				"type": "string"
			},
			"MS_DYNAMICS_DB_PORT": {
				"type": "string"
			},
			"MS_DYNAMICS_DB_USERNAME": {
