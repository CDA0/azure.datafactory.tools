{
	"name": "ls_MS_DYNAMICS",
	"properties": {
		"description": "Linked service for MS Dynamics",
		"parameters": {
			"MS_DYNAMICS_HOST": {
				"type": "string"
			},
			"MS_DYNAMICS_PORT": {
				"type": "string"
			},
			"MS_DYNAMICS_DATABASE": {
				"type": "string"
			},
			"MS_DYNAMICS_USERNAME": {
				"type": "string"
			},
			"ENVIRONMENT": {
				"type": "string"
			},
			"LOGICAL_ENVIRONMENT": {
				"type": "string"
			},
			"SHORT_LOCATION": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "SqlServer",
		"typeProperties": {
			"connectionString": "Integrated Security=True;Data Source=\"@{linkedService().MS_DYNAMICS_HOST}, @{linkedService().MS_DYNAMICS_PORT}\";Initial Catalog=@{linkedService().MS_DYNAMICS_DATABASE}",
			"userName": "@{linkedService().MS_DYNAMICS_USERNAME}",
			"password": {
				"type": "AzureKeyVaultSecret",
				"store": {
					"referenceName": "ls_KeyVaultCom",
					"type": "LinkedServiceReference",
					"parameters": {
						"ENVIRONMENT": {
							"value": "@linkedService().ENVIRONMENT",
							"type": "Expression"
						},
						"SHORT_LOCATION": {
							"value": "@linkedService().SHORT_LOCATION",
							"type": "Expression"
						}
					}
				},
				"secretName": {
					"value": "@concat('@{linkedService().LOGICAL_ENVIRONMENT}', '-MSDYNAMICS-', replace('@{linkedService().MS_DYNAMICS_DATABASE}', '_' , '-'))",
					"type": "Expression"
				}
			}
		},
		"connectVia": {
			"referenceName": "Woking",
			"type": "IntegrationRuntimeReference"
		}
	},
	"type": "Microsoft.DataFactory/factories/linkedservices"
}