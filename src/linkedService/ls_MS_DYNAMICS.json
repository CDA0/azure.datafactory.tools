						"SHORT_LOCATION": {
							"value": "@linkedService().SHORT_LOCATION",
							"type": "Expression"
						}
					}
				},
				"secretName": {
					"value": "@{linkedService().MS_DYNAMICS_DB_SECRET_NAME}",
					"type": "Expression"
				}
			}
		},
		"connectVia": {
